<div class="mx-auto md:w-2/3 w-full">

  <h1 class="font-bold text-4xl mb-8">Passkey Prototype</h1>

  <% if authenticated? %>
    <p>Welcome <%= Current.user.email %></p>

    <p>
      <%= button_to "Sign out",
        session_path,
        method: :delete,
        class: "px-4 py-2
          mx-4 my-4
          bg-blue-600 text-white
          text-sm font-medium
          rounded-md
          hover:bg-blue-700
          focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
    </p>
  <% else %>
    <p>
      <%= link_to "Sign in",
        new_session_path,
        class: "px-4 py-2
          mx-4 my-4
          bg-blue-600 text-white
          text-sm font-medium
          rounded-md
          hover:bg-blue-700
          focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>

      <%= link_to "Sign up",
        new_registration_path,
        class: "px-4 py-2
          mx-4 my-4
          bg-green-600 text-white
          text-sm font-medium
          rounded-md
          hover:bg-green-700
          focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2" %>
    </p>
  <% end %>
</div>
